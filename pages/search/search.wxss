    background: #fff;
    padding:10px;
    overflow:hidden;

}

.search-rank .searchTxt{
    border-left:2px solid #f56c10;
    padding-left:5px;
    color: #767676;
    margin-bottom:10px;
}

.search-rank .cont{
    width:100%;
    overflow:hidden;
}

.search-rank .cont .leside{
    position:relative;
    width:49%;
    height:95px;
    margin-right:15px;
}

.search-rank .leside image{
    width:100%;
    height:100%;
    border-radius: 4px;
}

.search-rank .leside text{
    display:block;    
}

.search-rank .leside .contText{
    position: absolute;
    left: 0;
    bottom: 0;
    background-color: rgba(0,0,0,.6);
    color: #fff;
    border-radius: 99px;
    width: 100%;
    padding: 8px 0;
    line-height: 15px;
    text-align:left;
    text-indent:8px;
}

.search-rank .leside .rankOne{
    position:absolute;
    left: 5px;
    top: 0;
    width: 22px;
    height: 32px;
    background-image:url('http://m.mgtv.com/94aa76ad4e9272227801a53dcaf07da4.png');
    text-align: center;
    line-height: 26px;
    font-size: 18px;
    color:#fff;
    background-size: 100% 100%;
}

.search-rank .riside{
    width:45%;
    overflow:hidden;
    margin-top:2px;
} 

.search-rank .riside .riside-l{
