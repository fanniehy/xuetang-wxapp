.searchRank{
    display:flex;
    position: fixed;
    width:100%;
    height: 72rpx;
    background-color: #f06000;
    padding: 6px 0 0;
    z-index: 1;
}

.searchRank .form{

    text-align: center;
    height: 55rpx;
    width:95%;
    margin: 0 auto;
    position: relative;
    background: #fff;
    border-radius: 99px;
    overflow: hidden;
    vertical-align: middle;
}

.searchRank .form input{
    width: 100%;
    border: none;
    font-size: 15px;
    height: 32px;
    line-height: 32px;
    padding-left: 5px;
    background-color:#fff;
}

.searchRank .form input.cl{
    color: #999;

    align-items: center;
}

.searchRank .nav{
    width:20%;
    display:inline-block;
    vertical-align: middle;
    color:#fff;
    font-size:14px;
    text-align:center;
}

.searchRank icon{
    position: absolute;
    right: 4px;
    top: 5px;
    display: block;
    width: 20px;
    height: 20px;
    line-height: 18px;
    background: #c8c8c8;
    border-radius: 99px;
    text-align: center;
    color: #fff;
    font-size: 15px;
    font-weight: 700;
}

.search-rank .riside .mb0{
