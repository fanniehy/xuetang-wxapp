.tags_panel{
    padding: 6px 10px;
    background-color: white;
}
.tags_panel_header{
    display: flex;
    padding: 5px 0;
}
.tags_panel_header text{
    font-size:14px;
    flex: 1;
    line-height: 22px;
}
.tags_panel_header button{
    display: inline-block;
    padding: 0;
    height: 22px;
    min-width: 60px;
    text-align: right;
    vertical-align: center;
    line-height: 22px;
    font-size: 12px;
    color: #e4393c;
    border: 0;
    border-radius: 3px;
    box-sizing: border-box;
}
.tags_panel_body{
    overflow: hidden;
    padding: 6px 0;
    font-size: 0;
}
.tags_panel_body text{
    overflow: hidden;
    display: inline-block;
    margin: 0 8px 8px 0;
    padding: 4px 10px;
    max-width: 300rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    line-height: 16px;
    font-size: 12px;
    background-color: #e8e8ed;
    border-radius: 3px;
    box-sizing: border-box;
}
.search_bar{
    display: flex;
    padding: 8px 10px;
    height: 30px;
    background-color: white;
    border-bottom: 1rpx solid #ddd;
}
.search_bar_box{
    position: relative;
    flex: 1;
    padding: 0 30px;
    background-color: #e8e8ed;
    border-radius: 30px;
}
.search_bar_box icon{
    position: absolute;
}
.search_bar_box icon.icon_search{
    top: 7px;
    left: 8px;
}
.search_bar_box icon.icon_clear{
    top: 7px;
    right: 10px;
}
.search_bar_box input{
    padding: 4px 0;
    min-height: auto;
    height: 100%;
    box-sizing: border-box;
}
.search_bar_box .input-placeholder{
    color: #ccc;
}
.search_bar_btn{
    display: block;
    margin-left: 10px;
    height: 30px;
    width: 50px;
    text-align: center;
    font-size: 14px;
    line-height: 28px;
    background-color: #f8f8f8;
    border-radius: 3px;
    border: 1px solid #ddd;
    box-sizing: border-box;
}
.search_bar_btn:active{
    background-color: rgb(231, 231, 231);
}
.search_bar_btn.search{
    color: white;
    line-height: 30px;
    background-color: #e4393c;
    border: 0;
}
.search_bar_btn.search:active{
    background-color: rgb(230, 56, 59);
}
